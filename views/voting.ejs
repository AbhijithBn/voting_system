<body>
    <div class="container">
        <div class="d-flex h-100 justify-content-center">
            <% for(var i=0; i < candidate.length; i++) { %> 

            <div class="card mt-5 shadow-lg p-4  mb-4 mr-4 bg-white">

                    <div class="d-flex card-header justify-content-center">
                        <h3><%= candidate[i].firstName %></h3>
                    </div>

                    <div class="card-body">
                       
                        <form class='form-register', action='/voted', method='POST'> 
                            
                        
                            <!-- horizontal-line -->
                            <div>
                                <hr>
                            </div>

                            <div class="d-flex justify-content-center form-group">
                                <input type="submit" value="Vote" class="btn btn-block btn-success">    
                            </div>

                            

                            <div class="d-flex justify-content-center form-group">
                                <button type="reset" value="Reset" class="btn btn-block btn-danger">Reset</button>
                            </div>


                        </form>
                  
                    </div>

                    <!-- CARD FOOTER -->
                    <div class="d-flex card-footer justify-content-center">
                        Website Under Development
                    </div>


            </div>
            <% } %>
        </div>


    </div>
    




